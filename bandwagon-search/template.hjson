{
	templateId:bandwagon-search
	templateRole:search
	extends:["base-intent"]
	containedBy: []
	model:Stream
	label:Bandwagon Search page
	description:Search Page for Bandwagon
	schema: {
		type:object
		properties: {
			icon: {type:"string"}
			label: {type:"string"}
			summary: {type:"string"}
			data: {
				type:object
				properties: {
					searchText: {type:"string"}
					content: {type:"string"}
				}
			}
		}    
	}
	states: {
		default: {
			label: "Default State",
			description: "Search templates do not use any other states"
		}
		published: {
			label: "Published",
			description: "This page can be viewed on the website"
		}
	}
	roles: {}

	bundles: {
		javascript: {
			content-type:application/javascript
		}
		hyperscript: {
			content-type:text/hyperscript
		}
	}
	
	actions: {

		create: {
			roles:["owner"]
			steps: [
				{do: "set-data", defaults: {label: "New Page"}}
				{
					do:edit
					form: {
						type:layout-tabs
						label:Create Search Page
						children: [
							{
								type:layout-vertical
								label:Page Info
								children: [
									{type:"text", label:"Token", path:"token"}
									{type:"text", label:"Icon", path:"icon"}
									{type:"text", label:"Page Name", path:"label"}
									{type:"textarea", label:"Description", path:"summary"}
								]
							},
							{
								type:layout-vertical
								label:Content
								children:[
									{type:"text", path:"data.searchText", label:"Search Text", description:"Prompt to display in the search box."}
									{type:"textarea", path:"data.content", label:"Page Heading", description:"Appears at the top of search results.  Markdown is okay.", options:{rows:10}}
								]
							}
						]
					}
				}
				{do:"save"}
				{do:"forward-to", url:"/{{.StreamID}}/edit"}
			]
		}
		edit: {
			roles: ["owner"]
			steps: [
				{do: "as-modal", background:"view", steps: [
					{
						do: edit
						options: ["delete:/{{.StreamID}}/delete"]
						form: {
							type: layout-tabs
							label:"Edit Search Page"
							children: [
								{
									type:"layout-vertical",
									label:"Page Info",
									children: [
										{type:"text", readOnly:true, label:"Template Type", path:"templateId"}
										{type:"text", label:"Token", path:"token"}
										{type:"text", label:"Icon", path:"icon"}
										{type:"text", label:"Page Name", path:"label"}
										{type:"textarea", label:"Description", path:"summary"}
									]
								},
								{
									type:"layout-vertical",
									label:"Content",
									children:[
										{type:"text", path:"data.searchText", label:"Search Text", description:"Prompt to display in the search box."}
										{type:"textarea", path:"data.content", label:"Page Heading", description:"Appears at the top of search results.  Markdown is okay.", options:{rows:10}}
									]
								}
							]
						}
					}
				]}
				{do: "save", message:"Edited by {{.Author.DisplayName}}"}
				{do: "refresh-page"}
			]
		}

		publish: {
			roles: ["owner"]
			steps: [
				{do:"as-confirmation", title:"Publish This Search Page?", message:"This will make the page visible to the public."}
				{do:"save-and-publish", state:"published", message:"Published by {{.Author.DisplayName}}"}
				{do:"forward-to", url:"/{{.StreamID}}"}
			]
		}

		unpublish: {
			roles: ["owner"]
			steps: [
				{do:"as-confirmation", title:"Unpublish This Search Page?", message:"This will make the page invisible to the public."}
				{do:"unpublish", state:"default", message:"Unpublished by {{.Author.DisplayName}}"}
				{do:"forward-to", url:"/{{.StreamID}}"}
			]
		}

		delete: {
			roles: ["owner"]
			steps: [
				{do:"delete", title:"Delete '{{.Label}}'?", message:"All content and comments will be lost.  There is NO UNDO."}
				{do:"forward-to", url:"/{{.ParentID}}"}
			]
		}

		view: {
			roles: ["owner"]
			stateRoles: {
				published: ["anonymous"]
			}
			steps:[
				{do:"view-html"}
			]
		}

		view-results: {
			roles: ["owner"]
			stateRoles: {
				published: ["anonymous"]
			}
			steps:[
				{do:"view-html"}
			]
		}
		view-suggestions: {
			roles: ["owner"]
			stateRoles: {
				published: ["anonymous"]
			}
			steps:[
				{do:"view-html"}
			]
		}
	}
}
